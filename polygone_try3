<!doctype html><meta charset="utf-8">
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
<div id="map" style="height:100vh;background:#fff"></div>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="https://unpkg.com/topojson-client@3"></script>
<script>
const map=L.map('map',{crs:L.CRS.Simple});
fetch("Polygone.json").then(r=>r.json()).then(t=>{
  const gj=topojson.feature(t,t.objects.data);
  const layer=L.geoJSON(gj,{style:{color:"#090",weight:1,fill:false}}).addTo(map);
  const b=layer.getBounds(); console.log('bounds-simple:',b.toBBoxString());
  if(b.isValid()) map.fitBounds(b);
});
</script>
